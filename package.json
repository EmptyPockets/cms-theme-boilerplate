{
  "name": "@hubspot/cms-theme-boilerplate",
  "version": "1.3.0",
  "description": "Boilerplate project for building websites on the HubSpot CMS",
  "repository": {
    "type": "git",
    "url": "git@git.hubteam.com:HubSpot/cms-theme-boilerplate.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@hubspot/cms-cli": "^1.0.13",
    "eslint": "^6.3.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.18.2",
    "concurrently": "^5.1.0",
    "node-sass": "^4.13.1"
  },
  "scripts": {
    "eslint": "eslint src",
    "lint": "eslint src && prettier --list-different 'src/**/*.js' 'src/**/*.json'",
    "prettier:write": "prettier --write 'src/**/*.js' 'src/**/*.json'",
    "watch": "hs watch dist damore-cms-theme --remove",
    "scss": "node-sass -w build/scss -o dist/css",
    "dev": "concurrently \"npm run scss\" \"npm run watch\""
  }
}
